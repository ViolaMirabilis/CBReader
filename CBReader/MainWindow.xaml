<Window x:Class="CBReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CBReader"
        mc:Ignorable="d"
        Title="MainWindow" Height="768" Width="1366" WindowStartupLocation="CenterScreen">
    <Grid>
        <ListBox ItemsSource="{Binding ComicBooks}" Margin="50" MouseDoubleClick="ListBox_MouseDoubleClick">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Vertical" Margin="20">
                        <TextBlock Text="{Binding Id}"/>
                        <TextBlock Text="{Binding Title}"/>
                        <TextBlock Text="{Binding Pages}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Label x:Name="lblSetComicBookFolder" Content="Double click to set a folder with comic book resources..." FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="0.50"/>
    </Grid>
</Window>
